<% unless current_user == user %>
  <% if current_user.favorite?(user) %>
    <%= form_for(current_user.favorites.find_by(user_id: user.id), html: { method: :delete }) do |f| %>
      
      <%= hidden_field_tag :microposts_id, user.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.buid) do |f|
      <%= hidden_field_tag :microposts_id, user.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>
      <% end %>
    <% end %>
  <% end %>
      